<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.arturborowy.vvmpim">

    <application
        android:name=".global.VvmpimApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="pl.arturborowy.vvmpim.form.name.FormNameActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".form.address.FormAddressActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".form.contact.FormContactActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>